<section id="solr">

    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Solr</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="solr[install]" class="multiselect-grouped-tab"
                                       data-tab-target="solr-pill"
                                    {% if solr.install == 1 %}checked{% endif %} value="1" /> Install Solr
                            </label>
                        </div>

                        <div class="col-xs-6">
                            <label for="solr-settings-cores">Solr Index Cores</label>
                            <select id="solr-settings-cores" name="solr[settings][cores][]"
                                    multiple class="form-control select-tags-editable">
                                {% for core in solr.settings.cores %}
                                    <option selected value="{{ core }}">{{ core }}</option>
                                {% endfor %}
                            </select>

                            <p class="help-block">
                                You can create any amount of index cores with any name, separated by comma.
                            </p>
                        </div>

                        <div class="col-xs-6">
                            <label for="solr-settings-jetty_port">Jetty Port</label>
                            <input type="number" id="solr-settings-jetty_port"
                                   name="solr[settings][jetty_port]"
                                   required placeholder="8080" pattern="^[1-9][0-9]*$" min="1025" max="20000"
                                   value="{{ solr.settings.jetty_port }}" class="form-control" />

                            <p class="help-block">
                                Solr 4.6.1 will be installed. To open your Solr admin page
                                <code>http://{SERVER_IP_ADDRESS}:{JETTY_PORT}/solr</code>.
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
