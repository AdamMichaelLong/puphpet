<section id="hhvm">

    <!-- hhvm -->
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">HHVM Quick Settings</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="hhvm[install]"
                                       {% if hhvm.install %}checked{% endif %} value="1" /> Install HHVM
                            </label>

                            <p class="help-block">
                                HHVM is a new open-source virtual machine designed for executing programs written in PHP.
                                <a href="https://github.com/facebook/hhvm/" target="_blank">Learn about HHVM</a>.
                            </p>
                        </div>

                        <div class="col-xs-12">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="hhvm[nightly]" value="1"
                                    {% if hhvm.nightly == 1 %}checked{% endif %} /> Install Nightly
                            </label>

                            <p class="help-block">
                                This will install the nightly release of HHVM. You probably don't want this, unless
                                you are Courage Wolf.
                            </p>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="hhvm-settings-host">Host</label>
                            <input type="text" id="hhvm-settings-host" name="hhvm[settings][host]"
                                   required placeholder="127.0.0.1"
                                   pattern="((^|\.)((25[0-5])|(2[0-4]\d)|(1\d\d)|([1-9]?\d))){4}$"
                                   oninvalid="setCustomValidity('IP address format: 127.0.0.1')"
                                   value="{{ hhvm.settings.host }}" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label for="hhvm-settings-port">Listen Port</label>
                            <input type="number" id="hhvm-settings-port"
                                   name="hhvm[settings][port]"
                                   required placeholder="13000" pattern="^[1-9][0-9]*$" min="5000" max="20000"
                                   value="{{ hhvm.settings.port }}" class="form-control" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- end hhvm -->

</section>
